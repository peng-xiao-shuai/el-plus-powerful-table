{
  "compilerOptions": {
    // 编译输出目标 ES 版本
    "target": "ES2018",
    // 采用的模块系统
    "module": "es6",
    // 以严格模式解析
    "strict": true,
    // 在.tsx文件里支持JSX
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "pretty": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["demo/*"],
      "#/*": ["typings/*"],
      "~/*": ["packages/*"],
      "$u/*": ["utils/*"],
    },
    // "typeRoots" :typingspes"],
    // , "element-plus/global"
    "types": ["webpack-env"],
    // 使用的JSX工厂函数
    //   "jsxFactory": "h",
    "lib": ["dom", "esnext", "dom.iterable", "scripthost"]
  },
  "include": [
    "demo/**/*.vue",
    "demo/**/*.tsx",
    "demo/**/*.ts",
    "packages/**/*.vue",
    "packages/**/*.tsx",
    "packages/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}

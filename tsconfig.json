{
  "compilerOptions": {
    // 编译输出目标 ES 版本
    "target": "ESNext",
    // 采用的模块系统
    "module": "ESNext",
    // 以严格模式解析
    "strict": true,
    // 在.tsx文件里支持JSX
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": true,
    "pretty": true,
    "paths": {
      "~/*": ["./packages/*"],
    },
    // "typeRoots" :typingspes"],
    "types": ["vite/client", "element-plus/global", "./lib/es/global"],
    // 使用的JSX工厂函数
    //   "jsxFactory": "h",
    "lib": ["dom", "esnext"]
  },
  "include": [
    "demo/**/*.vue",
    "demo/**/*.tsx",
    "demo/**/*.ts",
    "packages/**/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules/**",
    "typings/*.ts",
    "env.d.ts",
  ]
}
